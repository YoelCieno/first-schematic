{
  "$schema": "http://json-schema.org/schema",
  "id": "FirstStepsSchematics",
  "title": "First Steps Options Schema",
  "type": "object",
  "description": "Start to use schematics",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the first step",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Which is the first step?"
    }
  },
  "required": [
    "name"
  ]
}